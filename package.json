{
	"name": "greenwall-monorepo",
	"private": true,
	"version": "0.0.0",
	"workspaces": [
		"apps/*",
		"infra/*"
	],
	"scripts": {
		"start": "bun run --cwd apps/green-wall-manager start",
		"lint": "bun run --cwd apps/green-wall-manager lint",
		"test": "bun run --cwd apps/green-wall-manager testFinal",
		"db:start": "cd infra/supabase && docker compose -f docker-compose.yml -f ./dev/docker-compose.dev.yml up -d",
		"db:stop": "cd infra/supabase && docker compose -f docker-compose.yml -f ./dev/docker-compose.dev.yml stop",
		"prepare": "node .husky/install.mjs"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@testing-library/react-native": "^13.2.0",
		"@types/jest": "^29.5.14",
		"@types/react": "18.3.12",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.5",
		"eslint-plugin-testing-library": "^7.2.1",
		"eslint": "^8.57.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"prettier": "^3.5.3",
		"react-test-renderer": "^18.3.1",
		"typescript": "5.3.3"
	}
}
